<link href="{{ asset('public\build\app.css') }}" rel="stylesheet"/>

<div class="employeeTableDiv">
<table class='employeeTable'>
<thead>
<tr>
<p>
<th>First Name</th>
<th>Last Name</th>
<th>Date of Birth</th>
<th>Email</th>
</p>
</tr>
</thead>
                <tbody> 
                {% for employee in employees %}  
                <tr>  
                <p>
                    <td>{{ employee.firstName }}</td>
                     <td>{{ employee.lastName }}</td> 
                     <td>{{ employee.Dob | date('d/m/Y') }}</td> 
                     <td>{{ employee.email }}</td>
                </p>
                </tr>
                {% endfor %}
                </tbody>
</table>
</div>